{
  "name": "poetez-ts-lib-boilerplatre",
  "private": true,
  "version": "0.1.0",
  "description": "Typescript library boilerplate for Poetez Project",
  "scripts": {
    "clean": "rimraf dist coverage",
    "check-es3": "check-es3-syntax dist/umd/ --patch && apply-patch poetez-ts-lib-boilerplatre.js.patch && rimraf poetez-ts-lib-boilerplatre.js.patch",
    "lint": "npm-run-all --parallel lint:*",
    "lint:src": "tslint src/**/*.ts --type-check -c tslint.json -p tsconfig.tslint.json -t verbose",
    "lint:spec": "tslint spec/**/*.ts --type-check -c tslint.json -p tsconfig.tslint.json -t verbose",
    "test": "nodemon --watch src --watch spec -e ts --exec \"yarn run test:single\"",
    "test:single": "jasmine --config=jasmine.json",
    "test:cover": "nyc yarn run test:single",
    "build:cjs": "npm-run-all --parallel build:cjs:files build:cjs:copydts",
    "build:cjs:files": "tsc --outDir dist/cjs --target es5 -m commonjs --mapRoot ../cjs --declaration",
    "build:cjs:copydts": "cd src && copyfiles **/*.d.ts ../dist/cjs",
    "build:es": "npm-run-all --parallel build:es:files build:es:copydts",
    "build:es:files": "tsc --outDir dist/es --mapRoot ../es --declaration",
    "build:es:copydts": "cd src && copyfiles **/*.d.ts ../dist/es",
    "build:umd": "npm-run-all --parallel build:umd:regular build:umd:min",
    "build:umd:regular": "cross-env NODE_ENV=development webpack --config=config/webpack.dev.js",
    "build:umd:min": "cross-env NODE_ENV=production webpack --config=config/webpack.prod.js",
    "build": "npm-run-all --parallel build:cjs build:umd",
    "_prepublish": "npm-run-all clean lint test:single build",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poetez/poetez-ts-lib-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "typescript",
    "library"
  ],
  "author": "Vlad Rindevich <rindevich.vs@gmail.com> (https://github.com/Lodin)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/poetez/poetez-ts-lib-boilerplate/issues"
  },
  "homepage": "https://github.com/poetez/poetez-ts-lib-boilerplate#readme",
  "devDependencies": {
    "@types/jasmine": "^2.5.54",
    "apply-patch": "^0.1.2",
    "check-es3-syntax-cli": "^0.2.0",
    "codecov": "^2.3.0",
    "copyfiles": "^1.2.0",
    "cross-env": "^5.0.5",
    "eslint": "^4.5.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-plugin-import": "^2.7.0",
    "fork-ts-checker-webpack-plugin": "^0.2.7",
    "husky": "^0.14.3",
    "jasmine": "^2.8.0",
    "jasmine-spec-reporter": "^4.2.1",
    "lint-staged": "^4.0.4",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.1.0",
    "rimraf": "^2.6.1",
    "ts-loader": "^2.3.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.6.0",
    "tslint-config-poetez": "0.2.1",
    "typescript": "^2.4.2",
    "webpack": "^3.5.5"
  },
  "dependencies": {
    "tslib": ">=1.7.0"
  }
}
