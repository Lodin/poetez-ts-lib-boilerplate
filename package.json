{
  "name": "poetez-ts-react-component-lib-boilerplatre",
  "private": true,
  "version": "0.1.0",
  "description": "Typescript React component library boilerplate for Poetez Project",
  "scripts": {
    "clean": "rimraf dist coverage",
    "check-es3": "check-es3-syntax dist/umd/ --patch && apply-patch poetez-ts-lib-boilerplatre.js.patch && rimraf poetez-ts-lib-boilerplatre.js.patch",
    "lint": "npm-run-all --parallel lint:*",
    "lint:src": "tslint \"src/**/*.+(ts|tsx)\" --type-check -c tslint.json -p tsconfig.tslint.json -t verbose",
    "lint:spec": "tslint \"spec/**/*.+(ts|tsx)\" --type-check -c tslint.json -p tsconfig.tslint.json -t verbose",
    "test": "nodemon --watch src --watch spec -e ts --exec \"yarn run test:single\"",
    "test:single": "jasmine --config=jasmine.json",
    "test:cover": "nyc yarn run test:single",
    "build:cjs": "npm-run-all --parallel build:cjs:files build:cjs:copydts build:cjs:copycss",
    "build:cjs:files": "tsc --outDir dist/cjs --target es5 -m commonjs --mapRoot ../cjs --declaration",
    "build:cjs:copydts": "cd src && copyfiles **/*.d.ts ../dist/cjs",
    "build:cjs:copycss": "cd src && copyfiles **/*.css ../dist/cjs",
    "build:es": "npm-run-all --parallel build:es:files build:es:copydts build:es:copycss",
    "build:es:files": "tsc --outDir dist/es --mapRoot ../es --declaration",
    "build:es:copydts": "cd src && copyfiles **/*.d.ts ../dist/es",
    "build:es:copycss": "cd src && copyfiles **/*.css ../dist/es",
    "build": "npm-run-all --parallel build:cjs build:es",
    "_prepublish": "npm-run-all clean lint test:single build",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "start": "npm-run-all storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poetez/poetez-ts-lib-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "typescript",
    "library"
  ],
  "author": "Vlad Rindevich <rindevich.vs@gmail.com> (https://github.com/Lodin)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/poetez/poetez-ts-lib-boilerplate/issues"
  },
  "homepage": "https://github.com/poetez/poetez-ts-lib-boilerplate#readme",
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.0",
    "@storybook/addon-options": "^3.2.4",
    "@storybook/react": "^3.1.9",
    "@types/enzyme": "^2.8.3",
    "@types/jasmine": "^2.5.53",
    "@types/node": "^8.0.14",
    "@types/prop-types": "^15.5.1",
    "@types/react": "^15.0.38",
    "@types/react-dom": "^15.5.1",
    "@types/storybook__addon-actions": "^3.0.1",
    "@types/storybook__react": "^3.0.2",
    "apply-patch": "^0.1.2",
    "autoprefixer": "^7.1.2",
    "awesome-typescript-loader": "^3.2.1",
    "babel-loader": "^7.1.2",
    "check-es3-syntax-cli": "^0.2.0",
    "codecov": "^2.2.0",
    "copyfiles": "^1.2.0",
    "cross-env": "^5.0.1",
    "cssnano": "^3.10.0",
    "enzyme": "^2.9.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.7.0",
    "husky": "^0.14.3",
    "ignore-styles": "^5.0.1",
    "jasmine": "^2.6.0",
    "jasmine-spec-reporter": "^4.1.1",
    "jsdom": "^11.1.0",
    "jsdom-global": "^3.0.2",
    "kebab-case": "^1.0.0",
    "lint-staged": "^4.0.2",
    "nodemon": "^1.11.0",
    "normalize.css": "^7.0.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.0.3",
    "postcss-calc": "^6.0.0",
    "postcss-color-function": "^4.0.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-discard-comments": "^2.0.4",
    "postcss-extend": "^1.0.5",
    "postcss-flexbugs-fixes": "^3.0.0",
    "postcss-functions": "^3.0.0",
    "postcss-import": "^10.0.0",
    "postcss-inline-svg": "^3.0.0",
    "postcss-mixins": "^6.1.0",
    "postcss-remove-root": "^0.0.2",
    "postcss-svgo": "^2.1.6",
    "raw-loader": "^0.5.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.6.1",
    "storybook-addon-jsx": "^4.1.1",
    "storybook-readme": "^3.0.6",
    "ts-loader": "^2.3.1",
    "ts-node": "^3.2.1",
    "tslint": "^5.5.0",
    "tslint-config-poetez": "0.2.0",
    "typescript": "^2.4.2",
    "webpack": "^3.3.0"
  },
  "dependencies": {
    "react-icons": "^2.2.5",
    "tslib": ">=1.7.1"
  },
  "peerDependencies": {
    "react": "^15.0.0-0 || ^16.0.0-0",
    "react-dom": "^15.0.0-0 || ^16.0.0-0"
  }
}
