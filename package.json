{
  "name": "poetez-ts-lib-boilerplatre",
  "private": true,
  "version": "0.1.0",
  "description": "Typescript library boilerplate for Poetez Project",
  "main": "es/index.js",
  "scripts": {
    "clean": "rimraf commonjs es umd coverage",
    "lint": "tslint src/**/*.ts --type-check -p tsconfig.json -t verbose",
    "check-es3": "check-es3-syntax lib/ build/ --kill --print",
    "test": "nodemon --watch src --watch spec -e ts --exec \"yarn run test:single\"",
    "test:single": "jasmine --config=jasmine.json",
    "test:cover": "nyc yarn run test:single",
    "build:commonjs": "yarn run build:commonjs:files && yarn run build:commonjs:copydts",
    "build:commonjs:files": "tsc --outDir commonjs -m commonjs --mapRoot ../commonjs",
    "build:commonjs:copydts": "cd src && copyfiles **/*.d.ts ../commonjs",
    "build:es": "yarn run build:es:files && yarn run build:es:copydts",
    "build:es:files": "tsc --outDir es --target es2015 -m es2015 --mapRoot ../es",
    "build:es:copydts": "cd src && copyfiles **/*.d.ts ../es",
    "build:umd": "cross-env NODE_ENV=development webpack --config=config/webpack.dev.js --mapRoot ../umd",
    "build:umd:min": "cross-env NODE_ENV=production webpack --config=config/webpack.prod.js --mapRoot ../umd",
    "build": "yarn run build:commonjs && yarn run build:es && yarn run build:umd && yarn run build:umd:min",
    "_prepublish": "yarn run clean && yarn run lint && yarn test && yarn run build && yarn run check-es3",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poetez/poetez-ts-lib-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "typescript",
    "library"
  ],
  "author": "Vlad Rindevich <rindevich.vs@gmail.com> (https://github.com/Lodin)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/poetez/poetez-ts-lib-boilerplate/issues"
  },
  "homepage": "https://github.com/poetez/poetez-ts-lib-boilerplate#readme",
  "devDependencies": {
    "@types/jasmine": "^2.5.47",
    "awesome-typescript-loader": "^3.1.3",
    "copyfiles": "^1.2.0",
    "cross-env": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^0.13.3",
    "jasmine": "^2.6.0",
    "jasmine-spec-reporter": "^4.1.0",
    "lint-staged": "^3.4.2",
    "nodemon": "^1.11.0",
    "nyc": "^10.3.2",
    "rimraf": "^2.6.1",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "tslint-config-poetez": "https://github.com/poetez/tslint-config-poetez",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1"
  },
  "dependencies": {
    "tslib": ">=1.7.0"
  }
}
