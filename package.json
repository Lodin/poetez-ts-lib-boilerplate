{
  "name": "poetez-ts-lib-boilerplatre",
  "private": true,
  "version": "0.1.0",
  "description": "Typescript library boilerplate for Poetez Project",
  "main": "es/index.js",
  "scripts": {
    "clean": "rimraf commonjs es umd coverage",
    "lint": "tslint src/**/*.ts --type-check -p tsconfig.json -t verbose",
    "check-es3": "check-es3-syntax lib/ build/ --kill --print",
    "test": "nyc ./node_modules/.bin/_mocha --opts config/mocha.opts",
    "build:commonjs": "npm run build:commonjs:files && npm run build:commonjs:copydts",
    "build:commonjs:files": "tsc --outDir commonjs -m commonjs --mapRoot ../commonjs",
    "build:commonjs:copydts": "cd src && copyfiles **/*.d.ts ../commonjs",
    "build:es": "npm run build:es:files && npm run build:es:copydts",
    "build:es:files": "tsc --outDir es --target es2015 -m es2015 --mapRoot ../es",
    "build:es:copydts": "cd src && copyfiles **/*.d.ts ../es",
    "build:umd": "cross-env NODE_ENV=development webpack --config=config/webpack.dev.js",
    "build:umd:min": "cross-env NODE_ENV=production webpack --config=config/webpack.prod.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "_prepublish": "npm run clean && npm run lint && npm test && npm run build && npm run check-es3",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poetez/poetez-ts-lib-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "typescript",
    "library"
  ],
  "author": "Vlad Rindevich <rindevich.vs@gmail.com> (https://github.com/Lodin)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/poetez/poetez-ts-lib-boilerplate/issues"
  },
  "homepage": "https://github.com/poetez/poetez-ts-lib-boilerplate#readme",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "@types/sinon": "^2.2.1",
    "awesome-typescript-loader": "^3.1.3",
    "chai": "^3.5.0",
    "copyfiles": "^1.2.0",
    "cross-env": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.1",
    "mocha": "^3.3.0",
    "nyc": "^10.3.2",
    "rimraf": "^2.6.1",
    "sinon": "^2.2.0",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "tslint-config-poetez": "https://github.com/poetez/tslint-config-poetez",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1"
  },
  "dependencies": {
    "rxjs": "^5.3.1",
    "tslib": ">=1.7.0"
  }
}
