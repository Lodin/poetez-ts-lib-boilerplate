{
  "name": "poetez-ts-wc-lib-boilerplatre",
  "private": true,
  "version": "0.1.0",
  "description": "Typescript Web Component library boilerplate for Poetez Project",
  "scripts": {
    "clean": "rimraf dist coverage",
    "lint": "npm-run-all --parallel lint:*",
    "lint:src": "tslint \"src/**/*.+(ts|tsx)\" --type-check -c tslint.json -p tsconfig.tslint.json -t verbose",
    "lint:spec": "tslint \"spec/**/*.+(ts|tsx)\" --type-check -c tslint.json -p tsconfig.tslint.json -t verbose",
    "test": "nodemon --watch src --watch spec -e ts --exec \"yarn run test:single\"",
    "test:single": "jasmine --config=jasmine.json",
    "test:cover": "nyc yarn run test:single",
    "build": "npm-run-all --parallel build:files build:copydts build:copycss",
    "build:files": "tsc --outDir dist --mapRoot ../dist --declaration",
    "build:copydts": "cd src && copyfiles **/*.d.ts ../dist",
    "build:copycss": "cd src && copyfiles **/*.css ../dist",
    "build:copyproject": "copyfiles ./package.json ./README.md ./LICENSE dist",
    "_prepublish": "npm-run-all clean lint test:single build",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "start": "npm-run-all storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poetez/poetez-ts-lib-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "typescript",
    "library"
  ],
  "author": "Vlad Rindevich <rindevich.vs@gmail.com> (https://github.com/Lodin)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/poetez/poetez-ts-lib-boilerplate/issues"
  },
  "homepage": "https://github.com/poetez/poetez-ts-lib-boilerplate#readme",
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.0",
    "@storybook/addon-options": "^3.2.4",
    "@storybook/react": "^3.2.5",
    "@types/jasmine": "^2.5.53",
    "@types/node": "^8.0.24",
    "@types/react": "^16.0.2",
    "@types/react-dom": "^15.5.3",
    "@types/storybook__addon-actions": "^3.0.1",
    "@types/storybook__react": "^3.0.5",
    "autoprefixer": "^7.1.2",
    "codecov": "^2.3.0",
    "copyfiles": "^1.2.0",
    "cross-env": "^5.0.5",
    "cssnano": "^3.10.0",
    "eslint": "^4.5.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "html-loader": "^0.5.1",
    "husky": "^0.14.3",
    "jasmine": "^2.7.0",
    "jasmine-spec-reporter": "^4.2.1",
    "kebab-case": "^1.0.0",
    "lint-staged": "^4.0.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.1.0",
    "postcss-calc": "^6.0.0",
    "postcss-color-function": "^4.0.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-discard-comments": "^2.0.4",
    "postcss-extend": "^1.0.5",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-functions": "^3.0.0",
    "postcss-import": "^10.0.0",
    "postcss-inline-svg": "^3.0.0",
    "postcss-mixins": "^6.1.0",
    "postcss-remove-root": "^0.0.2",
    "postcss-svgo": "^2.1.6",
    "puppeteer": "^0.9.0",
    "raw-loader": "^0.5.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "rimraf": "^2.6.1",
    "storybook-readme": "^3.0.6",
    "ts-loader": "^2.3.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.6.0",
    "tslint-config-poetez": "0.2.1",
    "typescript": "^2.4.2",
    "webpack": "^3.5.5"
  },
  "dependencies": {
    "tslib": ">=1.7.0"
  }
}
